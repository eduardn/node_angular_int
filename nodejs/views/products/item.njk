{% extends "layout.njk" %}

{% block content %}
    <h1>{{ product.title }}</h1>

    <div class="row">
        <div class="col-md-2">
            <img src="{{ product.image }}" alt="{{ product.title }}">
        </div>
        <div class="col-md-10">
            <p>{{ product.description }}</p>

            <dl>
                <dt>Price</dt>
                <dd>${{ product.price }}</dd>

                <dt>Status</dt>
                <dd>
                    {% if product.isActive %}
                        <span class="label label-success">In Stock</span>
                    {% endif %}

                    {% if not product.isActive %}
                        <span class="label label-danger">Sold out</span>
                    {% endif %}
                </dd>
            </dl>
        </div>
    </div>
{% endblock %}